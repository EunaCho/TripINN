<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC 
	"-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
	"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
	
<tiles-definitions>

	<!-- 메인페이지 -->
	<definition name="main" template="/WEB-INF/common/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/common/header.jsp"/>
		<put-attribute name="main" value="/WEB-INF/common/main.jsp"/>
		<put-attribute name="bottom" value="/WEB-INF/common/bottom.jsp"/>
	</definition>

	<!-- **********************house_start**********************-->
	<!-- house layout -->
	<definition name="house" template="/WEB-INF/views/house/layout/layout.jsp">
		<put-attribute name="house_header" value="/WEB-INF/views/house/layout/header.jsp"/>
		<put-attribute name="house_body" value="/WEB-INF/views/house/layout/body.jsp"/>
	</definition>
	
	<!-- 메인 -->
	<definition name="houseMain" extends="main">
		<put-attribute name="main" value="house"/>
	</definition>
	
	<!-- list 정의 -->
	<definition name="houseList_Layout" extends="house">
		<put-attribute name="house_body" value="/WEB-INF/views/house/houseList.jsp"/>
	</definition>
	
	<!-- list -->
	<definition name="houseList" extends="main">
		<put-attribute name="main" value="houseList_Layout"/>
	</definition>
	
	
	<!-- open register 정의 -->
 	<definition name="openHouseRegister_Layout" extends="house">
		<put-attribute name="house_body" value="/WEB-INF/views/house/houseRegister.jsp"/>	
	</definition>
	
	<!-- open register -->
 	<definition name="openHouseRegister" extends="main">
		<put-attribute name="main" value="openHouseRegister_Layout"/>	
	</definition>
	

	<!-- insert register 정의 -->
 	<definition name="insertHouseRegister_Layout" extends="house">
		<put-attribute name="house_body" value="/WEB-INF/views/house/houseList.jsp"/>
	</definition>
	
	<!-- insert register -->
 	<definition name="insertHouseRegister" extends="main">
		<put-attribute name="main" value="insertHouseRegister_Layout"/>
	</definition>
	
	<!-- **********************house_end**********************-->
</tiles-definitions>
	